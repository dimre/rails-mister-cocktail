<h1><%= @cocktail.name %></h1>
<p>Recipe:</p>
<ul><% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete,data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
        <% end  %></li>
<% end %>
</ul>
<p><%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to 'Back to cocktail list', cocktails_path %></p>

