<% if @cocktail.photo.present? %>
  <%= cl_image_tag @cocktail.photo, height: 150, width: 200, crop: :fill %>
<% end %>

<h1><%= @cocktail.name %></h1>
<p>Recipe:</p>
<ul><% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete,data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
        <% end  %></li>
<% end %>
</ul>
<p class="btn btn-danger"><%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %></p>
<p class="btn btn-danger"><%= link_to 'Back to cocktail list', cocktails_path %></p>

